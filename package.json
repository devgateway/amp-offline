{
  "name": "amp-offline",
  "productName": "AMP Offline",
  "version": "1.5.0-SNAPSHOT",
  "description": "Offline desktop version of the AMP portal.",
  "main": "main.js",
  "scripts": {
    "test-mocha": "env-cmd --no-override test mocha --timeout 30000 --retries 2 --compilers js:babel-register --recursive --require ./test/setup.js test/**/*.spec.js",
    "test-electron-mocha": "env-cmd --no-override test electron-mocha --compilers js:babel-register --recursive --renderer test/**/*.spec.electron-mocha.js",
    "test-store": "env-cmd --no-override test electron-mocha --compilers js:babel-register --recursive --renderer test/**/*.spec.store.js",
    "test": "npm run test-mocha && npm run test-electron-mocha && npm run test-store",
    "test-watch": "npm test -- --watch",
    "test-mocha-watch": "npm run test-mocha -- --watch",
    "test-e2e": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 mocha --retries 2 --compilers js:babel-register --require ./test/setup.js ./test/e2e.js",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern libs/ --ext .jsx,.js --format=node_modules/eslint-formatter-pretty app test *.js",
    "hot-server": "env-cmd --no-override development node --max_old_space_size=2096 -r babel-register server.js",
    "build-main": "env-cmd --no-override production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --profile",
    "build-renderer": "env-cmd --no-override production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.production.js --profile",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=4096 npm run build-main && npm run build-renderer",
    "start": "env-cmd --no-override production electron ./app/",
    "start-hot-update-main-debug": "env-cmd --no-override development electron --inspect-brk=5858 -r babel-register -r babel-polyfill ./app/main.development",
    "start-hot": "env-cmd --no-override development electron -r babel-register -r babel-polyfill ./app/main.development",
    "postinstall": "concurrently \"install-app-deps\" \"node node_modules/fbjs-scripts/node/check-dev-engines.js package.json\"",
    "dev": "npm run hot-server -- --start-hot",
    "package": "npm run build && build --publish never",
    "package-win-32": "build --win --ia32",
    "package-win-64": "build --win --x64",
    "package-linux": "build --linux --x64 --ia32",
    "package-deb": "build --linux deb --x64 --ia32",
    "package-deb-64": "build --linux deb --x64",
    "package-deb-32": "build --linux deb --ia32",
    "package-mac": "npm run build && build -m",
    "package-all": "npm run build && build -mwl",
    "cleanup": "mop -v",
    "flow": "flow",
    "build-dll": "cross-env NODE_ENV=development node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.dll.js --profile",
    "list-asar-win": "asar list dist/win-unpacked/resources/app.asar"
  },
  "build": {
    "appId": "dg.AmpOffline",
    "mac": {
      "category": "public.app-category.tools",
      "target": "zip"
    },
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "filter": [
          "dist/**/*",
          "libs/**/*",
          "lang/**/*",
          "static/**/*",
          "app.html",
          "splash-screen.html",
          "main.js",
          "master-translations.en.json",
          "amp-help.pdf"
        ]
      },
      {
        "from": "node_modules/electron-pdf-window/pdfjs",
        "filter": [
          "**/*"
        ],
        "to": "pdfjs"
      },
      "package.json"
    ],
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "${name}-${version}.${ext}",
      "installerLanguages": ["en_US", "fr_FR", "es_ES"],
      "displayLanguageSelector": true
    },
    "linux": {
      "artifactName": "${name}-${version}-${arch}.${ext}",
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Network"
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "homepage": "",
  "author": {
    "name": "Development Gateway",
    "email": "info@developmentgateway.org",
    "url": "http://www.developmentgateway.org"
  },
